#ifndef _ESP8266_H_
#define _ESP8266_H_
#include "board.h"

typedef  void (*user_handle_t)(status_t status, void *userData);
struct esp_Data_t
{
	  user_handle_t user_handle;
	  void  *userData;
};

struct at_status_t 
{
	status_t at_status;
	
};
void at_callback(status_t status, void *userData);
export struct at_status_t *at_status;

int esp8266_uart_init(struct esp_Data_t *esp_Data);
int esp8266_wifi_setup(uint8_t *ssid, uint8_t *password);
int esp8266_create_tcp_client(uint8_t *ip, uint8_t *port);
void esp8266_send(uint8_t *buf, size_t size);
void esp8266_recv(uint8_t *buf, size_t size);
void esp8266_at_send(uint8_t *buf, size_t size);
void esp8266_at_recv(uint8_t *buf, size_t size);
#endif
